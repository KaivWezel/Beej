					<button class="close-room">Close biddings</button>
				</form>
				<h3><%= user.roomname %></h3>
			</section>
			<section class="slots">
				<form action="/slot" method="post"></form>
			</section>
			<section class="bids"></section>
			<section class=""></section>
		</main>
	</body>
</html>
